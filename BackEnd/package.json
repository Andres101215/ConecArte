{
  "name": "backend-microservices",
    "version": "1.0.0",
    "scripts": {
      "start": "concurrently \"npm run api-gateway\" \"npm run billing\" \"npm run cart\" \"npm run chat\" \"npm run payment\" \"npm run product\" \"npm run review\" \"npm run seller\" \"npm run user\"",
      
      "api-gateway": "cd api-gateway && node index.js",
      "billing": "cd billing-service && node server.js",
      "cart": "cd cart-service && node server.js",
      "chat": "cd chat-service && node server.js",
      "payment": "cd payment-service && node server.js",
      "product": "cd product-service && node server.js",
      "review": "cd review-service && node server.js",
      "seller": "cd seller-service && node server.js",
      "user": "cd user-service && node server.js"
    },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
